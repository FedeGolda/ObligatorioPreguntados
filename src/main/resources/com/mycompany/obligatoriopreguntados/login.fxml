<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- Configuración de VBox como el contenedor raíz y el controlador de la interfaz -->
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.obligatoriopreguntados.LoginController">
    <children>
        <Label text="Inicio de Sesión"/>
        
        <!-- Campo de texto para el nombre de usuario -->
        <TextField fx:id="usernameField" promptText="Usuario"/>
        
        <!-- Campo de texto para la contraseña -->
        <PasswordField fx:id="passwordField" promptText="Contraseña"/>

        <!-- Botón para iniciar sesión -->
        <Button text="Ingresar" onAction="#handleLogin"/>
        
        <!-- Botón para crear un nuevo usuario -->
        <Button text="Crear Usuario" onAction="#handleCreateUser"/>
    </children>
    
    <!-- Espaciado interno alrededor del VBox -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
